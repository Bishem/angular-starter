{
  "compileOnSave": false,
  "compilerOptions": {
    /*
    changed the base structure of the app 
    and added aliases to avoid ../../../../ ... pattern
    */
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@app/core/*": ["app/core/*"],
      "@app/shared/*": ["app/shared/*"],
      "@assets/*": ["assets/*"],
      "@env/*": ["environments/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
